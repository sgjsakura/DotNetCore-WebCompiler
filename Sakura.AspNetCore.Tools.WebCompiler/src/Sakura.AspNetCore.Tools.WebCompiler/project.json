{
	"version": "0.1.0",
	"buildOptions": {
			"emitEntryPoint": true,
			"outputName": "dotnet-webcompile"
	},

	"authors": [ "Iris Sakura" ],
	"description": "This tools is used to compile client web files in your .NET Core application.",
	"copyright": "Copyright (c) 2016 Iris Sakura. All rights reserved.",

	"packOptions": {
		"owners": [ "Iris Sakura" ],
		"summary": "This tools is used to compile client web files in your .NET Core application.",
		"releaseNotes": "First release with basic SCSS support.",
		"repository": {

			"type": "git",
			"url": "https://github.com/sgjsakura/DotNetCore-WebCompiler"
		},
		"licenseUrl": "https://github.com/sgjsakura/AspNetCore/blob/master/LICENSE.txt",
		"tags": [ ".NETCore", "ASP.NET", "ASP.NETCore", "Compile", "Compiler", "WebCompile", "WebCompiler", "SCSS", "SASS", "CSS" ]
	},

	"dependencies": {
		"Microsoft.NETCore.App": {
			"type": "platform",
			"version": "1.0.0"
		},

		"Newtonsoft.Json": "9.0.1",
		"SharpScss": "1.2.0",
		"Microsoft.Extensions.FileSystemGlobbing": "1.0.0"
	},

	"frameworks": {
		"netcoreapp1.0": {}
	},
	"configurations": {
		"Debug": {
			"buildOptions": {
				"optimize": false,
				"xmlDoc": false
			}
		},
		"Release": {
			"buildOptions": {
				"optimize": true,
				"xmlDoc": true
			}
		}
	},
	"scripts": {
		"postcompile": ["dotnet pack --no-build -c Release"]
	}
}
